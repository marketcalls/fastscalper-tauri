{
  "build": {
    "devPath": "../src",
    "distDir": "../src",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "fastscalper",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      }
    },
    "windows": [
      {
        "title": "fastscalper",
        "width": 320,
        "height": 125,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.fastscalper.app",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "cli": {
      "description": "FastScalper CLI",
      "longDescription": "FastScalper CLI for debugging",
      "beforeHelp": "",
      "afterHelp": "",
      "args": [
        {
          "name": "debug",
          "short": "d",
          "description": "Enable debug logging"
        }
      ]
    }
  }
}
